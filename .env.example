# Stock API Keys
US_STOCK_API_KEY=your_alphavantage_key_here  # Alpha Vantage API Key for US stocks
JP_STOCK_API_KEY=your_jpx_key_here           # JPX API Key for Japanese stocks
STOCK_MARKET=US  # US or JP - 使用する市場を指定

# LLM API Key
LLM_API_KEY=your_openai_key_here  # OpenAI API Key

# Interactive Brokers Settings
IB_ACCOUNT=your_account_id        # TWS/IB Gatewayアカウント
IB_PORT=7497                      # TWS: 7497, IB Gateway: 4001
IB_HOST=127.0.0.1                 # ローカルホスト
PAPER_TRADING=true                # true: ペーパートレード, false: 実取引

# Environment Mode
ENV_MODE=development              # development or production

# Initial Capital
INITIAL_CAPITAL=1000000          # 初期資金（ドル）

# Risk Management
RISK_PER_TRADE=0.02             # 1取引あたりのリスク（資金に対する割合）
MAX_POSITION_SIZE=0.1           # 最大ポジションサイズ（資金に対する割合）

# Target Symbols
US_SYMBOLS=NVDA,AAPL,MSFT,GOOGL                # 米国株式銘柄（カンマ区切り）
JP_SYMBOLS=7203.T,9984.T,6758.T,7974.T        # 日本株式銘柄（カンマ区切り）

# Data Settings
DATA_INTERVAL=1min               # データ間隔（1min, 5min, 15min, 30min, 60min, daily）
START_DATE=2024-02-05           # データ取得開始日

# Alert Settings
ALERT_DRAWDOWN=-0.03            # ドローダウンアラートの閾値
ALERT_PROFIT=0.05              # 利益アラートの閾値
ALERT_VOLUME_SPIKE=2.5         # 出来高急増アラートの閾値（平均比）

# Logging
LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s [%(levelname)s] %(message)s

# Directory Settings
REPORT_DIR=reports            # レポート出力ディレクトリ
LOG_DIR=logs                  # ログ出力ディレクトリ
MODEL_SAVE_DIR=models         # モデル保存ディレクトリ